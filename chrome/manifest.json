{
  "manifest_version": 2,
  "version": "0.1.1",
  "name": "VectorDraw - Paint on Tab",
  "description": "Draw interactive objects (circle, rectangular, polygon) or use brush on the current tab and capture result",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "offline_enabled": true,
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "https://add0n.com/vector-draw.html",
  "browser_action": {
    "default_title": "Left click to draw on page and right-click to open a new instance"
  },
  "web_accessible_resources": [
    "data/window/index.html"
  ]
}
